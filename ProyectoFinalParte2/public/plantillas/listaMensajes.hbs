{{#if mensajes.mensajes }}
<div class="table-responsive">
    <table>
        {{#each mensajes.mensajes }}
        <tr>
            <td>
                <b style="color:blue">{{this.username}}</b> 
                [<span style="color:brown">{{formatDate this.timestamp }}</span>]:
                <i style="color:green">{{this.mensaje}}</i>
            </td>
        </tr>
        {{/each}}
    </table>
</div>
{{ else }}
<h3 class="alert alert-warning">No hay mensajes</h1>
{{/if}}
<br>