{{#if mensajes.mensajes }}
<div class="mt-3">
        <div class="">
            <h1>Centro de Mensaje </h1>
            <p>(compresi√≥n de mensajes {{mensajes.porcentaje}} %)<p>
            <br>
        </div>
    </div>
<div class="table-responsive">
    <table>
        {{#each mensajes.mensajes }}
        <tr>
            <td>
                <b style="color:blue">{{this.author.id}}</b> 
                {{!-- [<span style="color:brown">{{formatDate fecha "dddd DD.MM.YYYY HH:mm"}}</span>]: --}}
                [<span style="color:brown">{{formatDate this.fecha }}</span>]:
                <i style="color:green">{{this.mensaje}}</i>
                <img src="{{this.author.avatar}}" style="max-height:3; max-width:3">
            </td>
        </tr>
        {{/each}}
    </table>
</div>
{{ else }}
<h3 class="alert alert-warning">No hay mensajes</h1>
{{/if}}
<br>